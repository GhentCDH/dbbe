{% extends 'base.html.twig' %}

{% block content %}
    <div class="col-sm-12 ">
        <h2 class="h1">Search occurrences</h2>
        {% if is_granted('ROLE_EDITOR_VIEW') %}
        <div class="pbottom-default">
            <a
                href="{{ path('occurrence_add') }}"
                class="action">
                <i class="fa fa-plus"></i> Add a new occurrence
            </a>
        </div>
        {% endif %}
    </div>
    <div id="occurrence-search-app">
        <occurrence-search-app
            :is-editor="{{ is_granted('ROLE_EDITOR_VIEW') ? 'true' : 'false' }}"
            :is-view-internal="{{ is_granted('ROLE_VIEW_INTERNAL') ? 'true' : 'false' }}"
            init-urls="{{ urls }}"
            init-data="{{ data }}"
            init-identifiers="{{ identifiers }}"
            init-managements="{{ managements }}"
        />
    </div>
{% endblock %}

{% block javascript %}
    {{ vite_entry_script_tags('main') }}
    {{ vite_entry_script_tags('occurrencesearch') }}
{% endblock %}
