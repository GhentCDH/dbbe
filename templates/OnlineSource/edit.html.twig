{% extends 'base.html.twig' %}

{% block content %}
    <div class="col-sm-9">
        <h2 class="h1">
            {% if id is not empty %}
                Edit online source
                <a
                    href="{{ path('online_source_get', {'id': id}) }}"
                    class="action pull-right"
                    title="View the online source">
                    <i class="fa fa-eye"></i>
                </a>
            {% else %}
                Add online source
            {% endif %}
        </h2>
    </div>
    <div id="online-source-edit-app">
        <online-source-edit-app
            init-urls = "{{ urls }}"
            init-data="{{ data }}"
            init-identifiers="{{ identifiers }}"
            init-roles="{{ roles }}"
        />
    </div>
{% endblock %}

{% block javascript %}
    {{ vite_entry_script_tags('main') }}
    {{ vite_entry_script_tags('onlinesourceedit') }}
{% endblock %}
