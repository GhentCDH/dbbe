{% extends 'base.html.twig' %}

{% block content %}
    <div class="col-sm-9">
        <h2 class="h1">
            {% if id is not empty %}
                Edit Article
                <a
                    href="{{ path('article_get', {'id': id}) }}"
                    class="action pull-right"
                    title="View the article">
                    <i class="fa fa-eye"></i>
                </a>
            {% else %}
                Add article
            {% endif %}
        </h2>
    </div>
    <div id="article-edit-app">
        <article-edit-app
            init-urls = "{{ urls }}"
            init-data="{{ data }}"
            init-roles="{{ roles }}"
            init-identifiers="{{ identifiers }}"
        />
    </div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript" src="{{ asset("/build/main.js") }}"></script>
    <script type="text/javascript" src="{{ asset("/build/articleedit.js") }}"></script>
{% endblock %}
