{% if item.getType() == 'book' %}
    <a href="{{ path('book_get', {'id': item.getBook().getId()}) }}">
        {{ item.getDescription() }}
        {% if sourceStatus is defined and sourceStatus is not empty %}
            ({{ sourceStatus.getName() }})
        {% endif %}
    </a>
    {% if item.getImage() is not empty %}
        (image: plate {{ item.getImage() }})
    {% endif %}
{% elseif item.getType() == 'article' %}
    <a href="{{ path('article_get', {'id': item.getArticle().getId()}) }}">
        {{ item.getDescription() }}
        {% if sourceStatus is defined and sourceStatus is not empty %}
            ({{ sourceStatus.getName() }})
        {% endif %}
    </a>
    {% if item.getImage() is not empty %}
