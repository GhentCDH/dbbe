{% if not item.getPublic() %}
    {% if is_granted('ROLE_VIEW_INTERNAL') %}
        <a href="{{ path(path, {'id': item.getId()}) }}" {% if class is defined and class is not empty %}class="{{class}}"{% endif %}>
            <span class="bg-warning">{{ display }}</span>
        </a>
    {% endif %}
{% else %}
    <a href="{{ path(path, {'id': item.getId()}) }}" {% if class is defined and class is not empty %}class="{{class}}"{% endif %}>{{ display }}</a>
{% endif %}
