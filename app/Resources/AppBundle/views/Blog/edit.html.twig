{% extends 'base.html.twig' %}

{% block content %}
    <div class="col-sm-9">
        <h2 class="h1">
            {% if id is not empty %}
                Edit blog
                <a
                    href="{{ path('blog_get', {'id': id}) }}"
                    class="action pull-right"
                    title="View the blog">
                    <i class="fa fa-eye"></i>
                </a>
            {% else %}
                Add blog
            {% endif %}
        </h2>
    </div>
    <div id="blog-edit-app">
        <blog-edit-app
            init-urls = "{{ urls }}"
            init-data="{{ data }}"
            init-identifiers="{{ identifiers }}"
            init-roles="{{ roles }}"
        />
    </div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript" src="{{ asset("build/main.js") }}"></script>
    <script type="text/javascript" src="{{ asset("build/blogedit.js") }}"></script>
{% endblock %}
