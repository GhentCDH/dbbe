{% extends 'base.html.twig' %}

{% block content %}
    <div id="regions-edit-app">
        <regions-edit-app
            init-regions="{{ regions }}"
            get-regions-url="{{ path('regions_get') }}"
            get-manuscript-deps-by-region-url="{{ path('manuscript_deps_by_region', {'id': 'region_id'}) }}"
            get-manuscript-url="{{ path('manuscript_show', {'id': 'manuscript_id'}) }}"
            get-institutions-by-region-url="{{ path('institutions_by_region', {'id': 'region_id'}) }}"
            get-regions-by-region-url="{{ path('regions_by_region', {'id': 'region_id'}) }}"
            post-region-url="{{ path('region_post') }}"
            put-region-merge-url="{{ path('region_merge', {'primary': 'primary_id', 'secondary': 'secondary_id'})}}"
            put-region-url="{{ path('region_put', {'id': 'region_id'}) }}"
            delete-region-url="{{ path('region_delete', {'id': 'region_id'}) }}"
        />
    </div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript" src="{{ asset("/build/regionsedit.js") }}"></script>
{% endblock %}
