{% extends 'base.html.twig' %}

{% block content %}
    <article class="col-xs-12">
        <h2>Manuscript "{{ name }}"</h2>
        <table class="table table-hover table-bordered">
            <tbody>
                {% for key,value in infos %}
                <tr>
                    <td>{{ value.title }}</td>
                    <td>
                        {% if value.type is defined and value.type == 'multiple' %}
                            {% if value.content|length == 1 %}
                                {{ value.content[0] }}
                            {% else %}
                                <ul>
                                {% for item in value.content %}
                                    <li>{{ item }}</li>
                                {% endfor %}
                                </ul>
                            {% endif %}
                        {% elseif value.type is defined and value.type == 'multiple_link' %}
                            {% if value.content|length == 1 %}
                                {% for id, name in value.content %}
                                    <a href="/persons/{{ id }}">{{ name }}</a>
                                {% endfor %}
                            {% else %}
                                <ul>
                                {% for id, name in value.content %}
                                    <li><a href="/persons/{{ id }}">{{ name }}</a></li>
                                {% endfor %}
                                </ul>
                            {% endif %}
                        {% else %}
                            {{ value.content }}
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </article>
{% endblock %}
