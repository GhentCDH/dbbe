{% extends 'base.html.twig' %}

{% block content %}
    <article class="col-xs-12">
        <h2>Manuscript "{{ name }}"</h2>
        <table class="table table-hover table-bordered">
            <tbody>
                {% for key,value in infos %}
                <tr>
                    <td>{{ value.title }}</td>
                    <td>
                        {% if value.type is defined and value.type == 'person' %}
                            <ul>
                            {% for person in value.content %}
                                <li><a href="/persons/{{ person.id }}">{{ person.name }}</a></li>
                            {% endfor %}
                            </ul>
                        {% else %}
                            {{ value.content }}
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </article>
{% endblock %}
