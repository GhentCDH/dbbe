        <link rel="icon" sizes="16x16 32x32" href="{{ asset('build/static/icons/favicon.ico') }}"/>
        <link rel="manifest" href="{{ asset('build/static/icons/manifest.json') }}"/>
        <meta name="msapplication-TileColor" content="#ffffff"/>
        <meta name="msapplication-TileImage" content="{{ asset('build/static/icons/ms-icon-144x144.png') }}"/>
        <meta name="theme-color" content="#ffffff"/>
    </head>

    <body>
        <div class="fluid-container">
            <div class="row">
                <header class="pageheader col-xs-12 ">
                    <nav class="navbar navbar-default">
                        <div class="row">
                            <div class="navbar-header col-xs-12 col-sm-2">
                                <div class="page-logo">
                                    <a href="./" class="link">
                                        <img src="{{ asset('build/static/images/logo_ugent_en.svg') }}" alt="Ghent University">
                                    </a>
                                </div>
                                <a href="#" class="toggle-search">
                                    <i class="glyphicon glyphicon-search"></i>
                                    <span>ZOEK</span>
                                </a>
                                <a href="#" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" role="button">
                                    <span class="">MENU</span>
                                    <div class="block">
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </div>
                                </a>
                            </div>
                            <div id="navbar" class="collapse navbar-collapse col-sm-10" role="navigation">
                                <div class="row menu">
                                    <div class="col-xs-12">
                                        <div class="bg-primary spacer">
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <ul class="nav-tertiary nav navbar-nav navbar-right">
                                                        <li>
                                                            <a href="https://www.ugent.be/lw/en" title="Home Faculty of Arts and Philosophy">Home Faculty of Arts and Philosophy</a>
                                                        </li>
                                                        <li class="last-child" id="siteaction-home_ugent">
                                                            <a href="https://www.ugent.be/en" title="Home Ghent University">Home Ghent University</a>
                                                        </li>
                                                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                                            <li>
                                                                <span><i class="fa fa-key"></i>&nbsp;{{ app.user.fullName }}</span>
                                                            </li>
                                                            <li>
                                                                <a href="{{ path('fos_user_change_password') }}">
                                                                    {{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="{{ path('fos_user_security_logout') }}">
                                                                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                                                </a>
                                                            </li>
                                                        {% else %}
                                                            <li>
                                                                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                                                            </li>
                                                        {% endif %}
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row menu">
                                    <div class="col-xs-12">
                                        <ul class="nav-primary nav navbar-nav">
                                            <li class="active">
                                                <a href="/">
                                                    <span>Home</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="/about">
                                                    <span>About</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="/help">
                                                    <span>Help</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="/contact">
                                                    <span>Contact</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </nav>
                    <div class="row branding-wrapper">
                        <div class="col-xs-12 col-sm-6 col-sm-offset-2 branding-container header_title faculty-1 small">
                            <a href="/">
                                <h1>Database of Byzantine Book Epigrams</h1>
                            </a>
                        </div>
                    </div>
                </header>
            </div>
        </div>

        <div class="fluid-container">
            {% if app.request.hasPreviousSession %}
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div role="alert" class="alert alert-dismissible alert-{{ type }}">
                            <button aria-label="Close" data-dismiss="alert" class="close" type="button"><span aria-hidden="true">Ã—</span></button>
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}
            <div class="row">
                {% block content %}{% endblock %}
            </div>
        </div>

        <footer class="page-footer fluid-container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="bg-primary padding-20">
                        <div class="row">
                            <div class="col-xs-12 col-sm-4 pbottom-small branding-container footer_title faculty">
                                <h2>
                                    <a href="/lw/en">
                                        <img class="svg" alt="logo faculty" src="{{ asset('build/static/images/logo_lw_en.svg') }}" />
                                    </a>
                                </h2>
                            </div>
                            <div class="col-xs-12 col-sm-8">
                                <ul class="list-inline list-unstyled pull-right">
                                    <li>
                                        <a href="mailto:dbbe@ugent.be">Feedback</a>
                                    </li>
                                    <li>
                                        &copy; {{ "now"|date("Y") }} Ghent University
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        {% block javascript %}
            <script type="text/javascript" src="{{ asset("/build/main.js") }}"></script>
        {% endblock %}
    </body>
</html>
